<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#46FF33"
    tools:context=".activity.SignUp">

    <TextView
        android:id="@+id/textSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="160dp"
        android:layout_marginRight="100dp"
        android:text="Sign Up"
        android:textColor="#000000"
        android:textSize="30sp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editSignUpName"
        android:hint="Name"
        android:layout_below="@id/textSignUp"
        android:textSize="18sp"
        android:textColor="#000000"
        android:padding="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="text"
        android:background="@drawable/rounded_text"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editSignUpEmail"
        android:hint="Email"
        android:layout_below="@id/editSignUpName"
        android:textSize="18sp"
        android:textColor="#000000"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/rounded_text"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editSignUpPassword"
        android:hint="Password"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_below="@id/editSignUpEmail"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="textPassword"
        android:background="@drawable/rounded_text"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSignUp"
        android:layout_below="@id/editSignUpPassword"
        android:layout_marginTop="20dp"
        android:text="Sign Up"
        android:background="@drawable/rounded_corners"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnBacktoLogIn"
        android:layout_below="@id/btnSignUp"
        android:layout_marginTop="20dp"
        android:text="Already Signed Up!!Log In"
        android:background="@drawable/rounded_corners"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="20dp"/>

</RelativeLayout>